    <script>
        var subject_id = '<%= subject_id %>';
        console.log(subject_id);
        var sub_header = document.getElementById("subject");
        sub_header.textContent += subject_id;
    </script>
    <script>
        var trace = {
            x: [<%= sorted_costs %>],
            y: [<%= sorted_indiff %>],
            mode: 'markers',
            type: 'scatter',
            marker: { size: 12 }
        };

        var data = [trace];

        var layout = {
            xaxis: {},
            yaxis: {},
            title: 'Indifference value over time.'
        };

        Plotly.newPlot('indiff_curve', data, layout);
    </script>
